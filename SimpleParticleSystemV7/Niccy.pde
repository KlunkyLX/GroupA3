// Class to draw Niccy!

// Class name.
class Niccy {

  //--------------------------------------------------------------------------------//
  //--------------------------- Instance Variables Start ---------------------------//
  //--------------------------------------------------------------------------------//
  PImage nic;
  float plus, minus;
  int alter = 1;
  //--------------------------------------------------------------------------------//
  //---------------------------- Instance Variables End ----------------------------//
  //--------------------------------------------------------------------------------//

  //--------------------------------------------------------------------------------//
  //------------------------------ Constructor Start -------------------------------//
  //--------------------------------------------------------------------------------//

  Niccy() {
    nic = loadImage("GroupA3jenAnist.jpg");
    nic.resize(width/5, 0);
    plus = 1;
    minus = -1;
  }
  //--------------------------------------------------------------------------------//
  //------------------------------- Constructor End --------------------------------//
  //--------------------------------------------------------------------------------//

  //--------------------------------------------------------------------------------//
  //----------------------------- Functionality Start ------------------------------//
  //--------------------------------------------------------------------------------//

  // Mthd to draw image
  //--------------------------------------------------------------------------------//
  void hiNic() {
    image(nic, width/2 - 200, 300);
  }  // mthd enclsng brce
  //--------------------------------------------------------------------------------//

  // Mthd to draw image at randon location
  //--------------------------------------------------------------------------------//
  void byeNic() {

    int inc = int(random(minus, plus));
    if (alter == 1) {
      image(nic, (width/2 - 200)+inc, 300-inc);
      alter = 2;
    } else {
      image(nic, (width/2 - 200)-inc, 300+inc);
      alter = 1;
    }
    minus = minus - 2;
    plus = plus + 2;
  }  // mthd enclsng brce
  //--------------------------------------------------------------------------------//

  //--------------------------------------------------------------------------------//
  //------------------------------ Functionality End -------------------------------//
  //--------------------------------------------------------------------------------//

  //--------------------------------------------------------------------------------//
  //-------------------------------- Getters Start ---------------------------------//
  //--------------------------------------------------------------------------------//
  //--------------------------------------------------------------------------------//
  //--------------------------------- Getters End ----------------------------------//
  //--------------------------------------------------------------------------------//

  //--------------------------------------------------------------------------------//
  //-------------------------------- Setters Start ---------------------------------//
  //--------------------------------------------------------------------------------//
  //--------------------------------------------------------------------------------//
  //--------------------------------- Setters End ----------------------------------//
  //--------------------------------------------------------------------------------//

  // Class enclsng crly brace
}
