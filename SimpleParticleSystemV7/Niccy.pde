// Class to draw Niccy!

// Class name.
class Niccy {

  //--------------------------------------------------------------------------------//
  //--------------------------- Instance Variables Start ---------------------------//
  //--------------------------------------------------------------------------------//
  PImage nic;
  float plus, minus;
  int alter = 1;
  //--------------------------------------------------------------------------------//
  //---------------------------- Instance Variables End ----------------------------//
  //--------------------------------------------------------------------------------//

  //--------------------------------------------------------------------------------//
  //------------------------------ Constructor Start -------------------------------//
  //--------------------------------------------------------------------------------//

  Niccy() {
    nic = loadImage("Asset 30.png");
    plus = 1;
    minus = -1;
  }
  //--------------------------------------------------------------------------------//
  //------------------------------- Constructor End --------------------------------//
  //--------------------------------------------------------------------------------//

  //--------------------------------------------------------------------------------//
  //----------------------------- Functionality Start ------------------------------//
  //--------------------------------------------------------------------------------//

  // Mthd to draw image
  //--------------------------------------------------------------------------------//
  void hiNic() {
    image(nic, width/2, height/2);
  }  // mthd enclsng brce
  //--------------------------------------------------------------------------------//

  // Mthd to draw image at randon location
  //--------------------------------------------------------------------------------//
  void byeNic() {

    int inc = int(random(minus, plus));
    if (alter == 1) {
      image(nic, (width/2)+inc, (height/2)-inc);
      alter = 2;
    } else {
      image(nic, (width/2)-inc, (height/2)+inc);
      alter = 1;
    }
    minus = minus - 2;
    plus = plus + 2;
  }  // mthd enclsng brce
  //--------------------------------------------------------------------------------//

  //--------------------------------------------------------------------------------//
  //------------------------------ Functionality End -------------------------------//
  //--------------------------------------------------------------------------------//

  //--------------------------------------------------------------------------------//
  //-------------------------------- Getters Start ---------------------------------//
  //--------------------------------------------------------------------------------//
  //--------------------------------------------------------------------------------//
  //--------------------------------- Getters End ----------------------------------//
  //--------------------------------------------------------------------------------//

  //--------------------------------------------------------------------------------//
  //-------------------------------- Setters Start ---------------------------------//
  //--------------------------------------------------------------------------------//
  //--------------------------------------------------------------------------------//
  //--------------------------------- Setters End ----------------------------------//
  //--------------------------------------------------------------------------------//

  // Class enclsng crly brace
}
